<h1 class="mt-4">Listing Posts</h1>

<table class="mt-4">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><b><%= post.title %></b></td>
        <td><%= post.content %></td>
        <td>
          <div class="mx-2 mt-4">
            <%= button_to "Show", post, method: :get, class: "btn btn-primary"  %>
          </div>
        </td>
        <% if user_signed_in? %>
	        <td>
            <div class="mx-2 mt-4">
              <%= button_to "Edit", edit_post_path(post), method: :get, class: "btn btn-primary"  %>
            </div>
          </td>
	        <td>
            <div class="mx-2 mt-4">
              <%= button_to "Destroy", post, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn btn-primary" %>
            </div>
          </td>
	      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if user_signed_in? %>
  <div class="mt-4">
    <%= button_to "New post", new_post_path, method: :get, class: "btn btn-primary"  %>
  </div>
<% end %>
