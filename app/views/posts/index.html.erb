<h1 class="mt-4">Listing Posts</h1>

<table class="mt-4">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td>
          <div class="btn btn-primary mx-2 mt-4">
            <%= link_to "Show", post, class: "link-light"  %>
          </div>
        </td>
        <% if user_signed_in? %>
	        <td>
            <div class="btn btn-primary mx-2 mt-4">
              <%= link_to "Edit", edit_post_path(post), class: "link-light"  %>
            </div>
          </td>
	        <td>
            <div class="btn btn-primary mx-2 mt-4">
              <%= link_to "Destroy", post, method: :delete, data: { confirm: "Are you sure?" }, class: "link-light" %>
            </div>
          </td>
	      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if user_signed_in? %>
  <div class="btn btn-primary mt-4"><%= link_to "New post", new_post_path, class: "link-light"  %></div>
<% end %>
